<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/menu_row_1"
            android:padding="20dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/tenbytenButton"
                android:padding="50dp"
                android:background="@android:drawable/btn_plus">Ten by Ten</ImageButton>

            <ImageButton
                android:id="@+id/eventsButton"
                android:padding="50dp"
                android:background="@android:drawable/ic_menu_agenda">Events
            </ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/menu_row_2"
            android:padding="20dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/announcementsButton"
                android:background="@android:drawable/ic_menu_day"
                android:padding="50dp">Announcements</ImageButton>

            <ImageButton
                android:id="@+id/aboutUsButton"
                android:padding="50dp"
                android:background="@android:drawable/ic_menu_myplaces">About Us
            </ImageButton>
        </TableRow>
    </TableLayout>

</RelativeLayout>
